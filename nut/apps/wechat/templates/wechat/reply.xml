
{% load guoku %}
<xml>
    <ToUserName><![CDATA[{{ msg.FromUserName }}]]></ToUserName>
    <FromUserName><![CDATA[{{ msg.ToUserName }}]]></FromUserName>
    <CreateTime>{{ timestamp }}</CreateTime>
{#    {% if item.type == 'text' %}#}
{#        <MsgType><![CDATA[{{ item.type }}]]></MsgType>#}
{#        <Content><![CDATA[{{ item.content }}]]></Content>#}

    {% if items %}
{#        {% if item.type == "news" %}#}
            <MsgType><![CDATA[news]]></MsgType>
            <ArticleCount>{{ items|length }}</ArticleCount>

            <Articles>
                {% for row in items %}
                <item>
{#                    <Title><![CDATA[test]]></Title>#}
{#                    <Description><![CDATA[test test]]></Description>#}
                    <Title><![CDATA[{{ row.brand }} - {{ row.title }}]]></Title>
                    <Description><![CDATA[{{ row.top_note }}]]></Description>
                    <PicUrl><![CDATA[{{ row.chief_image|resize:'240' }}]]></PicUrl>
                    <Url><![CDATA[http://www.guoku.com{% url 'web_entity_detail' row.entity_hash %}]]></Url>
                </item>
                {% endfor %}
            </Articles>

{#        {% else %}#}
{#            <MsgType><![CDATA[{{ item.type }}]]></MsgType>#}
{#            <Content><![CDATA[{{ item.content }}]]></Content>#}
{#        {% endif %}#}
    {% else %}
        <MsgType><![CDATA[text]]></MsgType>
        <Content><![CDATA[果库]]></Content>
    {% endif %}
</xml>